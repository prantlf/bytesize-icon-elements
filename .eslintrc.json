{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true
    },
    "globals": {
      "customElements": true
    },
    "extends": "eslint:recommended",
    "rules": {
        "indent": "off",
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}
